<form class="form-horizontal" action="/locations" method="post" enctype="multipart/form-data">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
        <label for="inputEmployeeName" class="col-sm-2 control-label">Employee Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputEmployeeName" name="employee[name]" placeholder="Employee Name">
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmployeeId" class="col-sm-2 control-label">Employee ID</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="inputEmployeeId" name="employee[eid]" placeholder="Employee ID">
        </div>
    </div>
    <div class="form-group">
        <label for="inputFile" class="col-sm-2 control-label">Data File</label>
        <div class="col-sm-10">
            <input type="file" id="inputFile" name="inputFiles[][attributes]" multiple>
            <p class="help-block">Select a file with vBox data</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-default" type="submit" name="commit" value="Upload Data" />
        </div>
    </div>
    <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>
</form>
